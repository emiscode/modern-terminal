# Aliases

# General
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'

# Git
alias g='git'
alias ga='git add'
alias gc='git commit'
alias gco='git checkout'
alias gd='git diff'
alias gl='git log'
alias gp='git push'
alias gs='git status'
alias gst='git status'

# Docker
alias d='docker'
alias dc='docker-compose'
alias dcu='docker-compose up'
alias dcd='docker-compose down'
alias dcr='docker-compose restart'

# Editors
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias hx='helix'

# File explorers
alias n='nnn'
alias y='yazi'
alias r='ranger'

# System
alias top='htop'
alias df='dust'
alias ps='procs'

# LazyGit
alias lg='lazygit'

# Quick config edits
alias zshconfig='nvim ~/.zshrc'
alias nvimconfig='nvim ~/.config/nvim/init.lua'
alias tmuxconfig='nvim ~/.config/tmux/tmux.conf'

# Reload zsh config
alias reload='source ~/.zshrc'

